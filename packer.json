{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-2",
      "source_ami": "ami-b84c7bdd",
      "iam_instance_profile": "rtt-jenkins-packer-role",
      "instance_type": "t2.medium",
      "ssh_username": "ubuntu",
      "ami_name": "jenkins-agent-{{isotime \"2006-01-02T1504\"}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 50,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update --fix-missing",
        "sudo apt-get install -y python",
        "sudo wget -q http://ec2-18-219-152-113.us-east-2.compute.amazonaws.com:8081/repository/rtt-release/apps/add2vals/1.0/add2vals-1.0",
        "sudo mv add2vals-1.0 /usr/local/bin/add2vals",
        "sudo chmod 777 /usr/local/bin/add2vals"
      ]
    }
  ]
}
